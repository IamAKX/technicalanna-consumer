<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="4dp"
    app:cardElevation="7dp"
    android:id="@+id/card"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">

        <RelativeLayout
            android:id="@+id/progressBackground"
            android:background="#123876"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.dinuscxj.progressbar.CircleProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                app:style="line"
                android:layout_centerInParent="true"
                app:progress_text_color="#ffffff"
                app:progress_text_size="20sp"
                app:progress_stroke_width="1dp"
                app:progress_start_color="#FB8C00"
                app:progress_end_color="#7CB342"
                app:progress_start_degree="-90"
                app:progress_shader="sweep"
                app:progress_stroke_cap="round"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/right_arrow"
                android:background="@android:color/transparent"
                android:tint="#ffffff"
                android:layout_margin="10dp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/subjectName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Subject"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            android:textStyle="bold"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
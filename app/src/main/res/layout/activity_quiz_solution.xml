<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_background"
    tools:context=".HelperActivity.QuizSolution">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        android:id="@+id/card"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="#fff"
        >




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="30dp"

            android:orientation="vertical">

            <TextView
                android:id="@+id/question"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:paddingBottom="20dp"
                android:background="#EEFCFB"
                android:gravity="center"
                android:text="abc"
                android:textSize="16sp"
                android:textStyle="bold"
                />

            <mehdi.sakout.fancybuttons.FancyButton
                android:layout_gravity="center_horizontal"
                android:id="@+id/option1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                fancy:fb_borderColor="#83aae5"
                fancy:fb_borderWidth="1dp"
                fancy:fb_defaultColor="#ffffff"
                fancy:fb_focusColor="#8083aae5"
                fancy:fb_iconPosition="left"
                fancy:fb_radius="5dp"
                fancy:fb_text="Option 1"
                fancy:fb_textColor="@color/colorAccent"
                android:layout_alignParentBottom="true"
                />

            <mehdi.sakout.fancybuttons.FancyButton
                android:layout_gravity="center_horizontal"
                android:id="@+id/option2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                fancy:fb_borderColor="#83aae5"
                fancy:fb_borderWidth="1dp"
                fancy:fb_defaultColor="#ffffff"
                fancy:fb_focusColor="#8083aae5"
                fancy:fb_iconPosition="left"
                fancy:fb_radius="5dp"
                fancy:fb_text="Option 1"
                fancy:fb_textColor="@color/colorAccent"
                android:layout_alignParentBottom="true"
                />

            <mehdi.sakout.fancybuttons.FancyButton
                android:layout_gravity="center_horizontal"
                android:id="@+id/option3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                fancy:fb_borderColor="#83aae5"
                fancy:fb_borderWidth="1dp"
                fancy:fb_defaultColor="#ffffff"
                fancy:fb_focusColor="#8083aae5"
                fancy:fb_iconPosition="left"
                fancy:fb_radius="5dp"
                fancy:fb_text="Option 1"
                fancy:fb_textColor="@color/colorAccent"
                android:layout_alignParentBottom="true"
                />

            <mehdi.sakout.fancybuttons.FancyButton
                android:layout_gravity="center_horizontal"
                android:id="@+id/option4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                fancy:fb_borderColor="#83aae5"
                fancy:fb_borderWidth="1dp"
                fancy:fb_defaultColor="#ffffff"
                fancy:fb_focusColor="#8083aae5"
                fancy:fb_iconPosition="left"
                fancy:fb_radius="5dp"
                fancy:fb_text="Option 1"
                fancy:fb_textColor="@color/colorAccent"
                android:layout_alignParentBottom="true"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/next"
                    android:layout_gravity="right"
                    android:layout_marginRight="-5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingRight="25dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    fancy:fb_borderColor="#83aae5"
                    fancy:fb_borderWidth="1dp"
                    fancy:fb_defaultColor="#83aae5"
                    fancy:fb_focusColor="#8083aae5"
                    fancy:fb_iconPosition="left"
                    fancy:fb_radius="5dp"
                    fancy:fb_text="NEXT"
                    fancy:fb_textColor="#ffffff"/>

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/prev"
                    android:layout_marginLeft="-5dp"
                    android:layout_gravity="left"
                    android:layout_marginRight="-5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingRight="25dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    fancy:fb_borderColor="#83aae5"
                    fancy:fb_borderWidth="1dp"
                    fancy:fb_defaultColor="#83aae5"
                    fancy:fb_focusColor="#8083aae5"
                    fancy:fb_iconPosition="left"
                    fancy:fb_radius="5dp"
                    fancy:fb_text="PREV"
                    fancy:fb_textColor="#ffffff"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/solution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_margin="20dp"
                android:gravity="center"/>
        </LinearLayout>


    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:elevation="7dp"
        android:text="100"
        android:id="@+id/questionNo"
        android:gravity="center"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/card"
        android:background="@drawable/circle"/>

</RelativeLayout>